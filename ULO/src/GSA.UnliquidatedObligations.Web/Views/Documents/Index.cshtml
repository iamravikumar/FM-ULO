@model IEnumerable<GSA.UnliquidatedObligations.BusinessLayer.Data.Document>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Uploaded By
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Workflow.WorkflowKey)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Workflow.WorkflowKey)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DocumentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DocumentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DocumentId })
        </td>
    </tr>
}

</table>
