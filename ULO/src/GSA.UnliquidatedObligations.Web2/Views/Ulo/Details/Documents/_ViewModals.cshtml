@using GSA.UnliquidatedObligations.Web.Controllers
@model GSA.UnliquidatedObligations.Web.Models.DocumentsViewModel
<div id="document-edit-modals">
    @foreach (var document in Model.Documents)
    {
        <div id="modal-container-@document.DocumentId">
            @{                
                @await Component.InvokeAsync("DocumentInfo", new { documentId = document.DocumentId, allowDocumentEdit = Model.AllowDocumentsEdit, docType = Model.DocType });
            }
        </div>
    }
</div>
@{    
    @await Component.InvokeAsync("DocumentInfo", new {documentId = 0, allowDocumentEdit = true, docType=Model.DocType});
}
